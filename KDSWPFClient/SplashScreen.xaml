<Window x:Class="KDSWPFClient.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KDSWPFClient"
        mc:Ignorable="d"
            Title="SplashScreen" Height="208" Width="638" WindowStartupLocation="CenterScreen" WindowStyle="None" 
        Background="Orange" BorderBrush="DarkOrange" BorderThickness="3" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Label Name="lblCopyright" FontSize="10" FontWeight="Bold" Foreground="SlateBlue">
            Integra IT Solutions, Kyiv, Ukraine
        </Label>

        <Label Name="lblTitle" Margin="19,22,17,80" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="MintCream">
            <Label.Effect>
                <DropShadowEffect BlurRadius="30" Opacity="1" ShadowDepth="0" Direction="0"/>
            </Label.Effect>
            Загрузка КДС-клиента
        </Label>

        <Label Name="lblMessage" Margin="19,0,17,25" FontSize="20" VerticalAlignment="Bottom" Foreground="Blue">
        </Label>
    </Grid>
</Window>
