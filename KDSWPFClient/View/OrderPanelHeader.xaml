<UserControl x:Class="KDSWPFClient.View.OrderPanelHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDSWPFClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">

    <UserControl.Resources>
        <Style x:Key="hdrLabelStyle1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource multParamConv}, ConverterParameter=0.07, Mode=OneWay}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="hdrLabelStyle2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource multParamConv}, ConverterParameter=0.05, Mode=OneWay}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="hdrLabelStyle3" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource multParamConv}, ConverterParameter=0.04, Mode=OneWay}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <!-- строка заголовка, содержит 3 строки -->
    <Grid x:Name="grdHeader" Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- строка с наимен.стола и номером заказа-->
        <Grid x:Name="grdHdrTableRow" Grid.Row="0" TextBlock.Foreground="{Binding ElementName=orderPanel, Path=HeaderForeground12}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource getMargin}, ConverterParameter='0.03;0.0;0.0;0.0'}">
                <TextBlock x:Name="tbTableLabel" Text="Стол № " Style="{StaticResource hdrLabelStyle2}" VerticalAlignment="Bottom"/>
                <TextBlock x:Name="tbTableName" Text="{Binding ElementName=orderPanel, Path=ViewOrder.TableName, Mode=OneWay, TargetNullValue='noName'}" Style="{StaticResource hdrLabelStyle1}" FontWeight="Bold"/>
            </StackPanel>
            <TextBlock x:Name="tbOrderNumber" Grid.Column="1" Style="{StaticResource hdrLabelStyle1}" Text="{Binding ElementName=orderPanel, Path=ViewOrder.Number, Mode=OneWay}" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Grid>
        <!-- официант -->
        <Grid x:Name="grdHdrWaiter" Grid.Row="1" TextBlock.Foreground="{Binding ElementName=orderPanel, Path=HeaderForeground12}" Background="Beige">
            <TextBlock x:Name="tbWaiter" Text="{Binding ElementName=orderPanel, Path=ViewOrder.Garson, Mode=OneWay, TargetNullValue='noName'}" Style="{StaticResource hdrLabelStyle2}" Margin="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource getMargin}, ConverterParameter='0.03;0.0;0.0;0.0'}" TextWrapping="Wrap" FontSize="22"/>
        </Grid>
        <!-- время создания заказа и счетчик приготовления -->
        <Grid x:Name="grdHdrOrderTime" Grid.Row="2" Background="{Binding ElementName=orderPanel, Path=HeaderBackground3}" TextBlock.Foreground="{Binding ElementName=orderPanel, Path=HeaderForeground3}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource getMargin}, ConverterParameter='0.03;0.01;0.0;0.02'}">
                <TextBlock x:Name="tbOrderDateLabel" Text="Создан в: " Style="{StaticResource hdrLabelStyle2}"/>
                <TextBlock x:Name="tbOrderDate" Text="{Binding ElementName=orderPanel, Path=ViewOrder.DateCreate, Mode=OneWay, TargetNullValue='noDate', StringFormat={}{0:HH:mm:ss}}" Style="{StaticResource hdrLabelStyle2}" FontWeight="Bold"/>
            </StackPanel>
            <Border Grid.Column="1" Background="{Binding ElementName=orderPanel, Path=OrderCookingCounterBackground}" Margin="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource getMargin}, ConverterParameter='0.01'}" CornerRadius="{Binding ElementName=orderPanel, Path=PanelWidth, Converter={StaticResource getCornerRadius}, ConverterParameter='0.02'}" Padding="5,3">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="tbOrderCookingCounterLabel" Text="Прошло: " Style="{StaticResource hdrLabelStyle2}"/>
                    <TextBlock x:Name="tbOrderCookingCounter" Style="{StaticResource hdrLabelStyle2}" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
