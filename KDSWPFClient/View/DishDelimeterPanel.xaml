<UserControl x:Class="KDSWPFClient.View.DishDelimeterPanel_pre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDSWPFClient.View"
             mc:Ignorable="d" Name="root"
             d:DesignHeight="60" d:DesignWidth="300" Background="White"
             >

    <Border Background="{Binding Background, ElementName=root}" BorderBrush="DarkBlue" BorderThickness="1,1,1,1">
        <TextBlock x:Name="tbDelimText" TextAlignment="Center" FontWeight="Bold" FontStretch="Expanded" Text="{Binding Text, ElementName=root}" VerticalAlignment="Center" Foreground="{Binding Foreground, ElementName=root}" Margin="0,0,0,3" TextWrapping="Wrap"/>
    </Border>

</UserControl>
