<?xml version="1.0" encoding="utf-8"?>
<!-- настройки клиента КДС (service/endpoint нужно указать ip компа, на котором запущена КДС-служба) -->

<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <!--http://www.nlog-project.org/schemas/NLog.netfx40.xsd-->
  <!--http://www.nlog-project.org/schemas/NLog.xsd-->
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets async="true">
      <target name="fileTrace" xsi:type="File" fileName="Logs/KDSClient.log" layout="${date}|${level}|${message}"
              archiveEvery = "Hour" archiveFileName = "Logs/KDSClient {#}.txt" archiveNumbering = "Date" archiveDateFormat="yyyyMMdd HH\h"
              concurrentWrites="false" keepFileOpen="true"/>
    </targets>
    <rules>
      <logger name="appLogger" minlevel="Trace" writeTo="fileTrace" />
    </rules>
  </nlog>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1"/>
  </startup>
  
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="getBinding">
          <security mode="None" />
        </binding>
        <binding name="setBinding" receiveTimeout="05:00:00">
          <reliableSession inactivityTimeout="05:00:00" enabled="true" />
          <security mode="None" />
        </binding>
      </netTcpBinding>
    </bindings>
    <client>
      <endpoint address="net.tcp://localhost:8733/KDSService" binding="netTcpBinding"
        contract="ServiceReference1.IKDSService" bindingConfiguration="getBinding"/>
      <endpoint address="net.tcp://localhost:8734/KDSCommandService/"
        binding="netTcpBinding" contract="ServiceReference1.IKDSCommandService" bindingConfiguration="setBinding"/>
    </client>

    <diagnostics>
      <messageLogging logEntireMessage="true" logMalformedMessages="true" logMessagesAtServiceLevel="true" logMessagesAtTransportLevel="false" maxMessagesToLog="5000" maxSizeOfMessageToLog="65535000"/>
    </diagnostics>
  </system.serviceModel>

  <appSettings>
    <!-- отделы, отображаемые на данном КДС (ID-ы через запятую) -->
    <!--<add key="depUIDs" value="1,2,15,16,17,18,19,20,21,22"/>-->
     <add key="depUIDs" value="1,2,3,5,6,7"/> 

    <add key="KDSMode" value="Chef"/>
    <!-- автоматический возврат группировки заказов из "По номерам" в "По времени", сек -->
    <add key="AutoReturnOrdersGroupByTime" value="10"/>
    <!-- звуковой файл, проигрываемый при появлении нового заказа -->
    <add key="NewOrderAudioAttention" value="tada.wav"/>
    <!-- кликабельность заголовка заказа -->
    <add key="OrderHeaderClickable" value="true"/>
    
    <!-- кликабельность ингредиента (независимо от блюда) или блюда на допнаправлении (IsIngredientsIndependent)-->
    <add key="IsIngredientsIndependent" value="true"/>
    <!-- отображать ли заголовок ЗАКАЗА тем же статусом, что и ВСЕ, ОТОБРАЖАЕМЫЕ НА ДАННОМ КДС-е, блюда/ингредиенты -->
    <add key="IsShowOrderStatusByAllShownDishes" value="true"/>
    
    <!-- настройка геометрии -->
    <add key="OrdersColumnsCount" value="5"/>
    <add key="AppFontScale" value="1.0"/>
    <!-- отступ сверху/снизу для панели заказов, в пикселях -->
    <add key="OrdersPanelTopBotMargin" value="40"/>
    <!-- отступ между заказами по вертикали, в пикселях -->
    <add key="OrderPanelTopMargin" value="50"/>
    <!-- отступ между заказами по горизонтали, в доли от ширины панели заказа -->
    <add key="OrderPanelLeftMargin" value="0.15"/>
    <!-- кнопки прокрутки страниц, в пикселях -->
    <add key="OrdersPanelScrollButtonSize" value="100"/>

    <!-- отладочные сообщения -->
    <add key="IsShowCFGButton" value="0"/>
    <add key="IsWriteTraceMessages" value="true"/>
    <!-- подробная информация о преобразованиях списка заказов, полученных клиентом от службы -->
    <add key="TraceOrdersDetails" value="1"/>
    <add key="IsLogClientAction" value="true"/>

    <add key="KDSModeSpecialStates" value="" /> 
    <add key="KDSModeSpecialActions" value="" />
  </appSettings>

</configuration>
