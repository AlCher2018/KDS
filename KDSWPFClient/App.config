  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="getData"/>
        <binding name="setData"/>
      </netTcpBinding>
    </bindings>
    <client>
      <endpoint address="net.tcp://localhost:8733/KDSService/" binding="netTcpBinding" bindingConfiguration="getData" contract="ServiceReference1.IKDSService" name="getData">
        <identity>
          <userPrincipalName value="prg01\Leschenko.V"/>
        </identity>
      </endpoint>
      <endpoint address="net.tcp://localhost:8734/KDSCommandService/" binding="netTcpBinding" bindingConfiguration="setData" contract="ServiceReference1.IKDSCommandService" name="setData">
