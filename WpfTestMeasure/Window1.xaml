        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMeasure"
        mc:Ignorable="d"
        Title="Window1" Height="212" Width="169">
    <Grid  x:Name="grdMain" x:FieldModifier="public" SnapsToDevicePixels="True">
        <Border BorderBrush="Red" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10,10,0,0" SnapsToDevicePixels="True">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="130" FontSize="12" SnapsToDevicePixels="True"/>
        </Border>
    </Grid>
</Window>
